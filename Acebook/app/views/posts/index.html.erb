
<h1>Your Posts</h1>
 <table>
  <tr>
    <th>Text</th>
    <th>Created At</th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.text %></td>
      <td><%= post.created_at.to_s(:short) %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>
