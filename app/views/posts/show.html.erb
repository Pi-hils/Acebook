
<div class='show_com'>
<p>
  <u>Post:</u>
  <%= @post.account.username %><br>
  <%= @post.text %><br>
  <%= @post.created_at.to_s(:db) %>
</p>

<div class="like-btn">
<%= link_to like_post_url(@post), method: 'put', remote: true do %>
  <span class="likeimg">🤍</span>
<% end %>
<span class="likeCount"><%= @post.get_likes.count %></span>
</div>

<p><u>Comments</u></p>
<%= render @post.comments %>

<%= render 'comments/form' %>

<% if @post.account_id == current_account.id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Destroy', post_path(@post),
    method: :delete,
    data: { confirm: 'Are you sure?' } %> |

<% end %>
<%= link_to 'Back', posts_path %>

</div>