<h1>Posts thus far</h1>
<%= link_to 'New Post', new_post_path %>

 <br><br>

  <% @posts.each do |post| %>
      <br><strong><%= post.account.email %></strong><br>
      <small><%= post.created_at.to_s(:short)%></small><br>
      <%= post.text %></td><br>
      
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    
  
    <span class='parent-likes'>
      <span class='like_count' <%=post.id%> >
        <%= post. get_likes.size %> 
      </span>

      <a>
        <% if current_account.liked? post %>
          <div> <%= button_to like_post_path(post, 'unlike'), class: "liked-btn",
          method: :put, remote: :true do %> 💙 </div>
          <% end %>
          <% else %>
          <div> <%= button_to like_post_path(post, 'like'), class: "like-btn",
          method: :put, remote: :true do %> 🤍 </div>
          <% end %>
          <% end %>
      </a>
      </span>






  <% end %>
</table>
