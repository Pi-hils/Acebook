<h1>Posts thus far</h1>
<%= link_to 'New Post', new_post_path %>


<table>
  <tr>
    <th>Text</th>
    <th>Created At</th>
    <th colspan='2'></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.text %></td>
        <td><%= post.created_at.to_s(:short)%></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>

