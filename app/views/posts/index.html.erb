

<div class='indexlink'>
  <p><%= link_to 'Create New Post', new_post_path %></p>
</div>

<br><br>

<% @posts.each do |post| %>
  <div class="list-group-item list-group-item-action flex-column align-items-start">
      <h5 class="mb-1"><%= post.account.username %></h5>
      <small class="text-muted"><%= post.created_at.to_s(:short)%><br></small>
      <br>
        <strong><%= post.text%></td></strong><br>
      <small class="text-muted"><%= link_to 'Comment', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
     </small>

  
    <div class="votes">
      <% if current_account.liked? post %>
        <%= link_to unlike_post_path(post), method: :get, remote: true, class: 'unlike_post' do %>
        unlike
        <% end %>
      <% else %>
        <%= link_to like_post_path(post), method: :get, remote: true, class: 'like_post' do %>
        like
        <% end %>
      <% end %>
    </div>
    <div class='votes_count'>
      <%= post.get_likes.size %>
    </div>

  </div><br><br>
  <% end %>

 <br>
