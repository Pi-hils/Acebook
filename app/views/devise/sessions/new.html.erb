<div id="session_table">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="field">
  <div class="fas fa-user-alt">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder:"Username" %>
  </div>
  </div>

<br>
  <div class="field">
    <div class="fas fa-envelope-open">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email"%>
  </div>
  </div>

<br>
  <div class="field">
  <div class='fas fa-user-lock'>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:'Password' %>
  </div>
  </div>
<br>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to "Home", root_path %>
</div>