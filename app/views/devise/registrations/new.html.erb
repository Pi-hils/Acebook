<div id="session_table">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
  <div class="fas fa-user-alt">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder:"Username" %>
  </div>
  </div>
<br>
  <div class="field">
    <div class="fas fa-envelope-open">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email"%>
  </div>
  </div>
<br>
  <div class="field">
  <div class='fas fa-user-lock'>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:'Password' %>
  </div>
  </div>
<br>
  <div class="field">
    <div class='fas fa-user-lock'>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'Confirm Password'%>
  </div>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>